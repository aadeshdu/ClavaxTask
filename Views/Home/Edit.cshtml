@model Clavaxtask.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
               
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
                
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmployeeDOB" class="control-label"></label>
                <input asp-for="EmployeeDOB" class="form-control" />
                <span asp-validation-for="EmployeeDOB" class="text-danger"></span>
                
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmployeeGender" class="control-label"></label>
                <input type="radio" asp-for="EmployeeGender" value="Male" /> Male
                <input type="radio" asp-for="EmployeeGender" value="Female" /> Female
                <input type="radio" asp-for="EmployeeGender" value="Other" /> Other
                <span asp-validation-for="EmployeeGender" class="text-danger"></span>
               
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmployeeAddress" class="control-label"></label>
                <textarea asp-for="EmployeeAddress" class="form-control"></textarea>
                <span asp-validation-for="EmployeeAddress" class="text-danger"></span>
               
            </div>
            <br />
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" class="form-control">
                    <option value="">--Select State--</option>
                    <option value="IN">India</option>
                    <option value="PAK">Pakistan</option>
                    <option value="CHI">Chaina</option>
                    <option value="AUS">Australia</option>
                    <option value="USA">United State of Ameria</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
